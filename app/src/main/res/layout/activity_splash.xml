<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#152d32"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/first_line"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:background="@drawable/white_line"
            android:layout_centerHorizontal="true">

        </View>
        <View
            android:id="@+id/secound_line"
            android:layout_width="20dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/red_line"
            android:layout_toRightOf="@+id/first_line"

            >

        </View>
        <View
            android:id="@+id/third_line"
            android:layout_width="20dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/white_line"
            android:layout_toRightOf="@+id/secound_line"

            >

        </View>
        <View
            android:id="@+id/fourth_line"
            android:layout_width="20dp"
            android:layout_height="250dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/purple_line"
            android:layout_toRightOf="@+id/third_line"

            >

        </View>
        <View
            android:id="@+id/five_line"
            android:layout_width="20dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/green_line"
            android:layout_toRightOf="@+id/fourth_line"

            >

        </View>
        <View
            android:id="@+id/six_line"
            android:layout_width="20dp"
            android:layout_height="220dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/white_line"
            android:layout_toRightOf="@+id/five_line"

            >

        </View>
        <View
            android:id="@+id/seven_line"
            android:layout_width="20dp"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/red_line"
            android:layout_toRightOf="@+id/six_line"

            >

        </View>


    </RelativeLayout>
    <ImageView
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@mipmap/ic_launcher"
        ></ImageView>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/name"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="50dp"></TextView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp" />


</LinearLayout>